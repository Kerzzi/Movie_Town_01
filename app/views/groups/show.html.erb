<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success"> 已收藏 </label>
            <%= link_to("Quit Movie", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> 未收藏 </label>
            <%= link_to("Join Movie", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("Write a Comment", new_group_post_path(@group), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <thead>
     <tr>
        <th>影评内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.name %></td>
          <td><%= post.created_at %></td>
          <td>
            <% if current_user && current_user == post.user %>
              <%= link_to("Edit", edit_group_post_path(post), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", group_post_path(post),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>

</div>
